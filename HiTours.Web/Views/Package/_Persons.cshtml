@model HotelBookingPersonDetailViewModel
@using HtmlHelpers.BeginCollectionItemCore

@using (this.Html.BeginCollectionItem("PersonDetails"))
{
    <div class="pax-details">   
        <div class="form-group col-sm-2">
            <input type="hidden" asp-for="PersonType" />
            <input type="hidden" asp-for="RoomNo" />
            <label asp-for="Salutation" class="control-label"></label>
            <select asp-for="Salutation" class="form-control " asp-items="Html.EnumSelectList<Salutation>(true,false)"></select>
        </div>
        <div class="form-group col-sm-3">
            <label asp-for="FirstName" class="control-label"></label>
            <input asp-for="FirstName" class="form-control" />
        </div>
        <div class="form-group col-sm-2">
            <label asp-for="LastName" class="control-label"></label>
            <input asp-for="LastName" class="form-control" />
        </div>

        <div class="form-group col-sm-2">
            <label asp-for="Gender" class="control-label"></label>
            <select asp-for="Gender" class="form-control " asp-items="Html.GetEnumSelectList<Gender>()"></select>
        </div>

