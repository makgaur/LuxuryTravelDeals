@model Fare
@using HtmlHelpers.BeginCollectionItemCore
<div class="segments-item section-row">
    @using (this.Html.BeginCollectionItem("Fares"))
    {
        <div class="form-group col-sm-2">
            <label asp-for="BaseFare"></label>
            <input type="text" asp-for="BaseFare" class="form-control" />
            <span asp-validation-for="BaseFare"></span>
        </div>
        <div class="form-group col-sm-2">
            <label asp-for="Tax"></label>
            <input type="text" asp-for="Tax" class="form-control" />
            <span asp-validation-for="Tax"></span>
        </div>

        <div class="form-group col-sm-3">
            <label asp-for="TransactionFee"></label>
            <input type="text" asp-for="TransactionFee" class="form-control" />
            <span asp-validation-for="TransactionFee"></span>
        </div>
        <div class="form-group col-sm-2">
            <label asp-for="YQTax"></label>
            <input type="text" asp-for="YQTax" class="form-control" />
            <span asp-validation-for="YQTax"></span>
        </div>
        <div class="form-group col-sm-2">
            <label asp-for="AdditionalTxnFeeOfrd"></label>
            <input type="text" asp-for="AdditionalTxnFeeOfrd" class="form-control" />
            <span asp-validation-for="AdditionalTxnFeeOfrd"></span>
        </div>

        <div class="form-group col-sm-2">
            <label asp-for="AdditionalTxnFeePub"></label>
            <input type="text" asp-for="AdditionalTxnFeePub" class="form-control" />
            <span asp-validation-for="AdditionalTxnFeePub"></span>
        </div>
        <div class="form-group col-sm-2">
            <label asp-for="AirTransFee"></label>
            <input type="text" asp-for="AirTransFee" class="form-control" />
            <span asp-validation-for="AirTransFee"></span>
        </div>
        <div class="form-group col-sm-1">
            <label></label>
            <a class="btn btn-danger btn-xs remove-section-row"><i class="fa fa-trash-o"></i> Remove</a>
        </div>
    }
</div>