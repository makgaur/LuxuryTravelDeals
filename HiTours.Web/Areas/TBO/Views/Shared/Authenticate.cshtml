@model UserCredential
@{  this.ViewBag.Title = "Authentication";}
<div class="row">
    <div class="col-md-12">
        <div class="box no-top-border">
            <div class="box-header with-border">
                <h3 class="box-title">@this.ViewBag.Title</h3>
            </div>
            <form asp-antiforgery="true" method="post" asp-action="Authenticate">
                <div class="box-body">
                    <div class="form-group col-sm-6">
                        <label asp-for="ClientId"></label>
                        <input type="text" asp-for="ClientId" class="form-control" />
                        <span asp-validation-for="ClientId"></span>
                    </div>
                    <div class="form-group col-sm-6">
                        <label asp-for="UserName"></label>
                        <input type="text" asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName"></span>
                    </div>
                    <div class="form-group col-sm-6 ">
                        <label asp-for="Password"></label>
                        <div class="input-group">
                            <input type="text" asp-for="Password" class="form-control password-mode" />
                            <span class="input-group-addon toggle-password"><i class="fa fa-eye-slash"></i></span>
                        </div>
                        <span asp-validation-for="Password"></span>
                    </div>
                    <div class="form-group col-sm-6">
                        <label asp-for="EndUserIp"></label>
                        <input type="text" asp-for="EndUserIp" class="form-control" />
                        <span asp-validation-for="EndUserIp"></span>
                    </div>

                </div>
                <div class="box-footer" align="center">
                    <button type="submit" class="btn btn-primary">Get Result</button>
                </div>
            </form>
        </div>
        @Html.Partial("_ApiResult")
    </div>
</div>