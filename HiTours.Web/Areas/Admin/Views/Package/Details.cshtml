@model PackageViewModel
@{
    this.ViewBag.Title = "Package Details";
}
<div class="row">
    <div class="col-md-12">
        <div class="box no-top-border">
            <div class="box-header with-border">
                <h3 class="box-title">@this.ViewBag.Title</h3>
                <div class="pull-right top-buttons">
                    @this.Html.ButtonTop(new[] {
                        new Button(Enums.ButtonType.AddNew, "/admin/package/manage"),
                        new Button(Enums.ButtonType.ViewList, "/admin/package") })
                </div>
            </div>
            <form class="form-horizontal">
                <div class="box-body min-height-250 details">

                    <div class="form-group col-sm-6">
                        <label asp-for="DealTypeId"></label>
                        <label class="form-control display-label">@(Common.GetText(this.Model.DealType, this.Model.DealTypeId))</label>
                    </div>
                    <div class="form-group col-sm-6">
                        <label asp-for="Name"></label>
                        <label class="form-control display-label">@Model.Name</label>
                    </div>
                    <div class="form-group col-sm-12">
                        <label asp-for="Details"></label>
                        <label class="form-control display-label">@Model.Details</label>
                    </div>
                    <div class="form-group">
                        <div class="form-group col-sm-6">
                            <label asp-for="ValidFrom"></label>
                            <label class="form-control display-label">@(string.Format("{0:MM/dd/yyyy}", Model.ValidFrom))</label>
                        </div>
                        <div class="form-group col-sm-6">
                            <label asp-for="ValidTo"></label>
                            <label class="form-control display-label">@(string.Format("{0:MM/dd/yyyy}", Model.ValidTo))</label>
                        </div>
                    </div>


                    <div class="form-group col-sm-6">
                        <label asp-for="Nights"></label>
                        <label class="form-control display-label">@(Common.GetText(this.ViewBag.Nights, this.Model.Nights))</label>
                    </div>

                    <div class="form-group col-sm-6">
                        <label asp-for="CityId"></label>
                        <label class="form-control display-label">@(Common.GetText(this.Model.Cities, this.Model.CityId))</label>
                    </div>

                    <div class="form-group col-sm-6">
                        <label asp-for="HotelId"></label>
                        <label class="form-control display-label">@(Common.GetText(this.Model.Hotels, this.Model.HotelId))</label>
                    </div>






                </div>
            </form>
        </div>
    </div>
</div>