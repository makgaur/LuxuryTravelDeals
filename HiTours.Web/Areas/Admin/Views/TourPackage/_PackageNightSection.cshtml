@{
    var routeData = this.ViewContext.RouteData.Values;
    var nextView = this.TempData["nextview"] != null ? this.TempData["nextview"].ToString() : "#view-package-night";
}
<div class="nav-tabs-custom">
    <input type="hidden" name="tabs" data-default="@nextView" value="@nextView" />
    <form class="hide">
        @foreach (var key in routeData.Keys)
        {
            <input type="hidden" name="@key" value="@(routeData[key])" />
        }
        <input type="hidden" name="Id" value="@(this.ViewBag.TourPackageId)" />
        <input type="hidden" name="tourpackagetype" value="@this.ViewBag.TourPackageType" />
        <input type="hidden" name="RowIdentifier" value="" />
    </form>

    <ul class="nav nav-tabs pull-right">
        <li class=""><a href="#add-packagenight" class="replaceAdd" data-toggle="tab" data-href="@Url.Action("PackageNights")"><i class="fa fa-plus"></i> Add Package Night</a></li>
        <li class=""><a href="#view-package-night" class="replaceView" data-toggle="tab" data-href="@Url.Action("PackageNightList")"><i class="fa fa-list"></i> View List</a></li>
    </ul>
    <div class="tab-content hotel-tabs">
        <div class="tab-pane" id="add-packagenight"></div>
        <div class="tab-pane" id="view-package-night"></div>
    </div>
    <div class="box-footer" align="center">
        <button class="nexttab-packagenightrate btn btn-primary">Next</button>
    </div>

</div>
<script>
    $(".nexttab-packagenightrate").on('click', function () {
        $('.tourpackage-night').trigger('click');
    });
</script>