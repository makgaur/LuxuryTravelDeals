@model VendorBankDetailsViewModel

<form asp-antiforgery="true" id="formVendorBank" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="VendorId" value="@Model.VendorId" />
    <input type="hidden" asp-for="UpdatedBy" />
    <input type="hidden" asp-for="UpdatedDate" />
    <input type="hidden" asp-for="CreatedBy" />
    <input type="hidden" asp-for="CreatedDate" />
    <div class="form-group col-md-4">
        <label asp-for="HolderName"></label>
        <input asp-for="HolderName" class="form-control" type="text" placeholder="Account Holder Name" />
        <span asp-validation-for="HolderName"></span>
    </div>
    <div class="form-group col-md-8">
        <label asp-for="AccountNumber"></label>
        <input asp-for="AccountNumber" class="form-control" type="text" placeholder="Account Number" />
        <span asp-validation-for="AccountNumber"></span>
    </div>
    <div class="form-group col-md-4">
        <label asp-for="BankName"></label>
        <input asp-for="BankName" class="form-control" type="text" placeholder="Bank Name" />
        <span asp-validation-for="BankName"></span>
    </div>
    <div class="form-group col-md-4">
        <label asp-for="IFSCCode"></label>
        <input asp-for="IFSCCode" class="form-control" type="text" placeholder="IFSC Code" />
        <span asp-validation-for="IFSCCode"></span>
    </div>
    <div class="form-group col-md-4">
        <label asp-for="SwiftCode"></label>
        <input asp-for="SwiftCode" class="form-control" type="text" placeholder="Swift Code" />
        <span asp-validation-for="SwiftCode"></span>
    </div>
    <div class="form-group col-md-4">
        <label asp-for="AccountType"></label>
        <input asp-for="AccountType" class="form-control" type="text" placeholder="Account Type" />
        <span asp-validation-for="AccountType"></span>
    </div>
    <div class="form-group col-md-4">
        <label asp-for="PAN"></label>
        <input asp-for="PAN" class="form-control" type="text" placeholder="PAN Number" />
        <span asp-validation-for="PAN"></span>
    </div>
    <div class="form-group col-md-4">
        <label asp-for="GST"></label>
        <input asp-for="GST" class="form-control" type="text" placeholder="GST Number" />
        <span asp-validation-for="GST"></span>
    </div>
    <div class="form-group col-md-4">
        <label asp-for="IsPrimary"></label>
        <input asp-for="IsPrimary" type="checkbox" class="minimal">
    </div>
    <div class="row"></div>
    @this.Html.ButtonBottom(new[] { new Button(Enums.ButtonType.SaveandReload) })
</form>
