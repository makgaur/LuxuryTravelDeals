@model List<HotelierRoomConfigurationViewModel>

@if (Model != null && Model.Count > 0)
{
    <form asp-antiforgery="true" id="formDealRoomMaster" method="post" enctype="multipart/form-data">
        <div class="col-sm-12 col-xs-12">
            <div class="form-group">
                <div class="tax-tabel-wrap">
                    <div class="table-responsive">
                        <table id="tpimages" class="table table-standard table-bordered invoice-tabel-2">
                            <thead>
                                <tr>
                                    <th style="width:50px;">Action</th>
                                    <th>Room Name</th>
                                    <th>Adults</th>
                                    <th>Child</th>
                                    <th>Infant</th>
                                    <th>Max</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.Count; i++)
                                {
                                    
                                    <tr>
                                        <td>
                                            <div class="field-col">
                                                <input asp-for="@Model[i].IsSelected" type="checkbox" class="minimal form-control">
                                            </div>

                                        </td>
                                        <td>
                                            <div class="field-col">
                                                <strong><i class="fa fa-fw fa-bed"></i> @Model[i].PackageHotelRoomTypeViewModel.Name</strong>
                                            </div>
                                        </td>
                                        <td>
                                            <input type="hidden" asp-for="@Model[i].Id" />
                                            <input type="hidden" asp-for="@Model[i].Adult" />
                                            <input type="hidden" asp-for="@Model[i].AdultAge" />
                                            <input type="hidden" asp-for="@Model[i].CardImg" />
                                            <input type="hidden" asp-for="@Model[i].Child" />
                                            <input type="hidden" asp-for="@Model[i].ChildAge" />
                                            <input type="hidden" asp-for="@Model[i].Description" />
                                            <input type="hidden" asp-for="@Model[i].FreeChild" />
                                            <input type="hidden" asp-for="@Model[i].FreeInfant" />
                                            <input type="hidden" asp-for="@Model[i].HotelId" />
                                            <input type="hidden" asp-for="@Model[i].Infant" />
                                            <input type="hidden" asp-for="@Model[i].InfantAge" />
                                            <input type="hidden" asp-for="@Model[i].IsActive" />
                                            <input type="hidden" asp-for="@Model[i].Max" />
                                            <input type="hidden" asp-for="@Model[i].RoomTypeId" />
                                            <div class="field-col">
                                                <span>@Model[i].Adult</span>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="field-col">
                                                <span>@Model[i].Child</span>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="field-col">
                                                <span>@Model[i].Infant</span>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="field-col">
                                                <span>@Model[i].Infant</span>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="col-md-5"></div>
                        <div class="col-md-2"><button class="btn btn-block btn-primary" type="submit">Add to Deal</button></div>
                        <div class="col-md-5"></div>
                        
                    </div>
                </div>
            </div>
        </div>
        @*@this.Html.ButtonBottom(new[] { new Button(Enums.ButtonType.SaveandReload) })*@
    </form>
}
<script>
    $(document).ready(function (e) {
        $('input[type="checkbox"].minimal').iCheck({
            checkboxClass: 'icheckbox_minimal-blue'
        });
    });
    
</script>