@model List<PromotionViewModel>


@if (Model.Count > 0)
{
<form asp-antiforgery="true" id="formBulkCoupons" method="post" enctype="multipart/form-data">
    <div class="table-responsive">
        <table class="table table-standard table-bordered invoice-tabel-2">
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Type</th>
                    <th>Amount</th>
                    <th>Max Amount</th>
                    <th>Valid From</th>
                    <th>Valid To</th>
                </tr>
            </thead>

            <tbody>
                @if (Model.Count > 0)
                {
                    for (int i = 0; i < Model.Count; i++)
                    {
                        @this.Html.Partial("_Promotion", Model[i])
                    }
                }
            </tbody>


            <tfoot>
                <tr>
                    <td colspan="12" style="text-align:center;"><button type="button" onclick="SubmitBulkCoupons()" class="btn btn-primary">Save Coupons</button></td>
                </tr>
            </tfoot>

        </table>
    </div>
</form>
}
