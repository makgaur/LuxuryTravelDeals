@model CategoryViewModel
@{
    this.ViewBag.Title = "Category Details";
}
<div class="row">
    <div class="col-md-12">
        <div class="box no-top-border">
            <div class="box-header with-border">
                <h3 class="box-title">@this.ViewBag.Title</h3>
                <div class="pull-right top-buttons">
                    @this.Html.ButtonTop(new[] {
                           new Button(Enums.ButtonType.AddNew, "/admin/category/manage"),
                           new Button(Enums.ButtonType.ViewList, "/admin/category") })
                </div>
            </div>
            <form class="form-horizontal">
                <div class="box-body min-height-250 details">
                    <div class="form-group">
                        <label asp-for="Name" class="col-sm-1 control-label"></label>
                        <div class="col-sm-10">
                            <span class="control-label">@this.Model.Name</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="IsActive" class="col-sm-1 control-label"></label>
                        <div class="col-sm-10">
                            <span class="control-label">@(this.Model.IsActive ? "Yes" : "No")</span>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>